generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model countries {
  id                String   @id @default(uuid())
  // timestamps
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  country_name      String   @db.VarChar(255)
  number_of_regions Int
}

model provinces {
  id                 String @id @default(uuid())
  province_name      String @db.VarChar(255)
  province_code      String @db.VarChar(8)
  provincial_capital String @db.VarChar(8)
  // country_id         countries @relation(fields: [country_id], references: [id])
  // country_id         String
}

